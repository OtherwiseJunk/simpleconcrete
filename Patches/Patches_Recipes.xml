<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "ElectricSmelter"]/recipes</xpath>
	  <value>
		<li>MakeD9Cement</li>
		<li>MakeD9CementBulk</li>
		<li>MakeD9CementGeneral</li>
		<li>MakeD9CementGeneralBulk</li>
	  </value>
	</Operation> 
	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "BiofuelRefinery"]/recipes</xpath>
	  <value>
		<li>MakeD9Concrete</li>
	  </value>
	</Operation> 
	<!-- renames the Biofuel Refinery back to the refinery and changes the description so making concrete there makes sense -->
	<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "BiofuelRefinery"]/label</xpath>
	  <value>
		<label>refinery</label>
	  </value>
	</Operation> 
	<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "BiofuelRefinery"]/description</xpath>
	  <value>
		<description>Refines raw ingredients into more complex materials.</description>
	  </value>
	</Operation> 
</Patch>
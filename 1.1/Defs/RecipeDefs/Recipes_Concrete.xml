<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- vanilla clinker recipes -->
  <RecipeDef>
    <defName>MakeD9Cement</defName>
    <label>smelt stone into cement</label>
    <description>Use high heat to calcine limestone or other stone into cement to produce concrete. 33% less limestone is required than other stone types.</description>
    <jobString>Smelting stone into cement.</jobString>
    <workAmount>4000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
	<ingredientValueGetterClass>D9Concrete.IngredientValueGetter_Concrete</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
		  <categories>
            <li>StoneBlocks</li>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
    <products>
      <D9Cement>2</D9Cement>
    </products>
    <fixedIngredientFilter>
      <categories>
		<li>StoneBlocks</li>
		<li>StoneChunks</li>
	  </categories>
    </fixedIngredientFilter>
  </RecipeDef>
  <RecipeDef>
    <defName>MakeD9CementBulk</defName>
    <label>smelt stone into cement in bulk</label>
    <description>Use high heat to calcine limestone or other stone into cement to produce concrete. 33% less limestone is required than other stone types.</description>
    <jobString>Smelting stone into cement in bulk.</jobString>
    <workAmount>4000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
	<ingredientValueGetterClass>D9Concrete.IngredientValueGetter_Concrete</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
		  <categories>
            <li>StoneBlocks</li>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>90</count>
      </li>
    </ingredients>
    <products>
      <D9Cement>6</D9Cement>
    </products>
    <fixedIngredientFilter>
      <categories>
		<li>StoneBlocks</li>
		<li>StoneChunks</li>
	  </categories>
    </fixedIngredientFilter>
  </RecipeDef>
  <!-- vanilla concrete recipe (large enough to be bulk) -->
  <!-- 2 cement, 2 stone chunks (any) -> 60 concrete -->
  <RecipeDef>
    <defName>MakeD9Concrete</defName>
    <label>mix concrete</label>
    <description>Mix cement, aggregate, and water to produce concrete.</description>
    <jobString>Mixing concrete.</jobString>
    <workAmount>2100</workAmount>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>D9Cement</li>
          </thingDefs>
        </filter>
        <count>2</count>
	</li>
	<li>
		<filter>
			<categories>
				<li>StoneChunks</li>
			</categories>
		</filter>
		<count>2</count>
      </li>
    </ingredients>
    <products>
      <D9Concrete>65</D9Concrete>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>D9Cement</li>
      </thingDefs>
	  <categories>
		<li>StoneChunks</li>
	  </categories>
    </fixedIngredientFilter>
  </RecipeDef>
</Defs>
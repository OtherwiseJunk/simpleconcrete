<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- vanilla clinker recipes -->
  <RecipeDef>
    <defName>MakeD9Cement</defName>
    <label>smelt limestone into cement</label>
    <description>Use high heat to calcine limestone into cement to produce concrete.</description>
    <jobString>Smelting limestone into cement.</jobString>
    <workAmount>1500</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkLimestone</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <D9Cement>2</D9Cement>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkLimestone</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
  <RecipeDef>
    <defName>MakeD9CementBulk</defName>
    <label>smelt limestone into cement in bulk</label>
    <description>Use high heat to calcine limestone into cement to produce concrete.</description>
    <jobString>Smelting limestone into cement in bulk.</jobString>
    <workAmount>4000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
			<categories>
            <li>StoneBlocks</li>
          </categories>
          <thingDefs>
            <li>ChunkLimestone</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <products>
      <D9Cement>6</D9Cement>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkLimestone</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
